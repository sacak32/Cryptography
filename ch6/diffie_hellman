p = 2671
R = Integers(p)
A = 171
B = 853
E = EllipticCurve( GF(p), [0,0,0,A,B] )
P = E(1980,431)
Qa = E(2110,543)
nb = 1943

# Part a
Qb = nb*P
print( "Qb:", Qb )

# Part b
S = nb*Qa
print( "S:", S )

# Part c
na = discrete_log( Qa, P, P.order(), operation='+')
print( "na:", na )

# Part d
xa = R(2)
nb = 875

Qb = nb*P
print ( "Qb:", Qb )

ya2 = xa^3 + A*xa + B
ya = ya2.sqrt(all=True)
print ( "for xa:", xa, "ya^2:", ya2, "ya:", ya )

Qa = E(2,2575)
S = nb*Qa
print ( "S:", S )
